<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:behaviors="clr-namespace:NDG.Helpers.Behaviors;assembly=NDG.Helpers"
    mc:Ignorable="d">
    
    <Style TargetType="HyperlinkButton" x:Key="AccentLinkButton">
        <Setter Property="Foreground" Value="{StaticResource PhoneAccentBrush}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="HyperlinkButton">
                    <TextBlock Text="{TemplateBinding Content}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <ControlTemplate x:Key="MyServeysTemplate">
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="90" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Name}" FontSize="32" 
                       Grid.Column="0"
                       VerticalAlignment="Bottom"
                       FontWeight="SemiBold" HorizontalAlignment="Left" />
            <TextBlock Text="{Binding DateReceived, Converter={StaticResource DateToTextConverter}}"
                       Grid.Column="1" Margin="0,0,0,5"
                       VerticalAlignment="Bottom"
                       FontSize="18" HorizontalAlignment="Right" />
            <i:Interaction.Behaviors>
                <behaviors:TapListenerBehavior Command="{Binding SurveyDetails.NavigateToSurveyDetailsCommand, Source={StaticResource Locator}}"
                                               CommandParameter="{Binding ID}"/>
            </i:Interaction.Behaviors>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="SavedResponsesTemplate">
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
              
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Name}" FontSize="32" 
                       Grid.Column="0"
                       VerticalAlignment="Bottom"
                       FontWeight="SemiBold" HorizontalAlignment="Left" />
        
            <i:Interaction.Behaviors>
                <behaviors:TapListenerBehavior Command="{Binding Category.NavigateToResponseSetAnswersCommand, Source={StaticResource Locator}}"
                                               CommandParameter="{Binding ID}"/>
            </i:Interaction.Behaviors>
        </Grid>
    </ControlTemplate>

    <DataTemplate x:Key="SubmittedResponsesTemplate">

    </DataTemplate>

</ResourceDictionary>
